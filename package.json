{
  "name": "jsont",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jsont": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.tsx",
    "start": "node dist/index.js",
    "test": "node --max-old-space-size=8192 node_modules/.bin/vitest",
    "test:ui": "vitest --ui",
    "test:run": "node --max-old-space-size=8192 node_modules/.bin/vitest run",
    "test:ci": "node --max-old-space-size=6144 node_modules/.bin/vitest run --config vitest.config.ci.ts",
    "test:watch": "vitest --watch",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "format:write": "biome format --write ./src",
    "check": "biome check ./src",
    "check:write": "biome check --write ./src",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "json",
    "tui",
    "terminal",
    "cli",
    "viewer",
    "jq",
    "jsonata",
    "schema",
    "interactive",
    "tree-view",
    "search",
    "export",
    "xml",
    "sql",
    "csv",
    "yaml",
    "configuration",
    "settings",
    "debug",
    "navigation",
    "collapsible",
    "syntax-highlighting"
  ],
  "author": "",
  "license": "MIT",
  "description": "Interactive terminal JSON viewer with tree display, search, jq/JSONata queries, schema generation, and multi-format export (JSON/YAML/CSV/XML/SQL)",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/react": "^19.1.9",
    "defu": "^6.1.4",
    "es-toolkit": "^1.39.8",
    "ink": "^6.1.0",
    "jotai": "^2.12.5",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "mutative": "^1.2.0",
    "neverthrow": "^8.2.0",
    "node-jq": "^6.0.1",
    "react": "^19.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  }
}
