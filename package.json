{
  "name": "jsont",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jsont": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.tsx",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "format:write": "biome format --write ./src",
    "check": "biome check ./src",
    "check:write": "biome check --write ./src",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "json",
    "tui",
    "terminal",
    "cli",
    "viewer",
    "jq",
    "jsonata"
  ],
  "author": "",
  "license": "ISC",
  "description": "A Terminal User Interface (TUI) JSON viewer with advanced query capabilities",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "es-toolkit": "^1.28.1",
    "ink": "^6.0.1",
    "jotai": "^2.10.3",
    "json5": "^2.2.3",
    "react": "^19.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.10",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "lint-staged": "^16.1.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  }
}
